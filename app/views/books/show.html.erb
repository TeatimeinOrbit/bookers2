<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>

       <%= render 'lists', user: @user, book: @book_new %>

    </div>

    <div class="col-md-1">
    </div>

    <div class="col-md-8">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td class="col-md-1">
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
                <%= @user.name %>
              <% end %>
            </td>
            <td class="col-md-4">
              <%= @book.title %>
            </td>
            <td class="col-md-8">
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
              <td class="btn btn-sm btn-success">
                <%= link_to edit_book_path(@book.id) do %>
                 <span class="text-light">Edit</span>
                <% end %>
              </td>
              <td class="col-md-1"></td>
              <td class="btn btn-sm btn-danger">
                <%= link_to book_path(@book.id), method: :delete do %>
                  <span class="text-light">Destroy</span>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
