<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="user-info">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
    </div>

   <div class='row'>
      <div class="btn btn-outline-secondary btn-block">
        <%= link_to edit_user_path(@user.id) do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>
   </div>
</div>



<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %>
  <label>Opinion</label><br>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>