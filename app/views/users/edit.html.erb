<p id="notice"></p>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  		<h1>Editing Book</h1>

  		<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  		  <div class="form-group">
  		  <%= f.label :Name %>
        <%= f.text_field :name, class:"col-md-12" %>
        </div>

        <div class="form-group">
        <%= f.label :Image %>
        <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class:"col-md-12" %>
        </div>

        <div class="form-group">
        <%= f.label :Introduction %>
        <%= f.text_area :introduction, class:"col-md-12" %>
        </div>
        <div class="form-group">
        <%= f.submit 'Update User', class:"btn btn-success col-md-5" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
