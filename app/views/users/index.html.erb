<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

       <%= render 'books/lists', user: @user, book: @book %>

    </div>

    <div class="col-md-1">
    </div>

    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="col-md-4">image</th>
            <th class="col-md-5">name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to user_path(user.id) do %>
                  Show
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
